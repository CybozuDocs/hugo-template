---
import { env } from "@/lib/env";
import ApplyParams from "./ApplyParams.astro";
import type { BaseProps } from "./types";

interface Props extends BaseProps {}

const { page } = Astro.props;

// タイトルの決定ロジック
let target = page.frontmatter.title;
if (env.targetRegion === "US" && page.frontmatter.titleUs) {
  target = page.frontmatter.titleUs;
} else if (env.targetRegion === "CN" && page.frontmatter.titleCn) {
  target = page.frontmatter.titleCn;
}
---

<ApplyParams target={target} params={env} />
