---
interface Props {
  contactSupportText: string;
  hubspotId?: string;
}

const { contactSupportText, hubspotId = "1857320" } = Astro.props;
---

<aside id="support-inquiry">
  <div class="inquiry-panel">
    <button 
      class="inquiry-btn hs-cta-trigger-button hs-cta-trigger-button-187693642597" 
      id="inquiry-btn"
    >
      <i class="fas fa-headset inquiry-icon"></i>
      {contactSupportText}
    </button>
  </div>
  <!-- Start of HubSpot Embed Code -->
  <script 
    type="text/javascript" 
    id="hs-script-loader" 
    async 
    defer 
    src={`//js.hs-scripts.com/${hubspotId}.js`}
  ></script>
  <!-- End of HubSpot Embed Code -->
</aside> 