---
interface Props {
  localeModalMessage: string;
  yesText: string;
  noText: string;
}

const { localeModalMessage, yesText, noText } = Astro.props;
---

<div class="locale-modal">
  <div class="locale-modal-content" role="dialog" aria-modal="true">
    <div class="locale-modal-text">
      <div set:html={localeModalMessage} />
    </div>
    <div class="locale-modal-button">
      <button type="button" class="locale-modal-button-yes">
        <span>{yesText}</span>
      </button>
      <button type="button" class="locale-modal-button-no">
        <span>{noText}</span>
      </button>
    </div>
  </div>
</div> 