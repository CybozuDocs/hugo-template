---
import Wovn from "@/components/Wovn.astro";
import type { BaseProps } from "./types";

interface Props extends BaseProps {}

const { page } = Astro.props;
---

<nav class="pagination">
  {
    page.siteNext === null ? (
      <div class="pagination-previous" />
    ) : (
      page.siteNext && (
        <div class="pagination-previous">
          <i class="fas fa-caret-left" aria-hidden="true" />
          <a href={page.siteNext.permalink}>
            <Wovn>前のページへ</Wovn>
          </a>
        </div>
      )
    )
  }

  {
    page.sitePrev !== null && page.sitePrev && !page.sitePrev.isHome && (
      <div class="pagination-next">
        <a href={page.sitePrev.permalink}>
          <Wovn>次のページへ</Wovn>
        </a>
        <i class="fas fa-caret-right" aria-hidden="true" />
      </div>
    )
  }
</nav>
