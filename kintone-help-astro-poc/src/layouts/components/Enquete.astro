---
interface Props {
  previewSite?: boolean;
  wasItHelpfulText: string;
  closeText: string;
  yesText: string;
  noText: string;
  buildnum: string;
}

const { 
  previewSite = false,
  wasItHelpfulText,
  closeText,
  yesText,
  noText,
  buildnum
} = Astro.props;

// プレビューサイトの場合は何も表示しない
if (previewSite) {
  return null;
}
---

<aside id="enquete">
  <div class="enquete-panel">
    <div>
      {wasItHelpfulText}
      <button class="close-enquete" id="close-enquete" title={closeText}>
        <i class="far fa-window-close"></i>
      </button>
    </div>
    <div class="enquete-btn-wrap">
      <button class="enquete-btn" id="feedback-yes" aria-label={yesText}>
        {yesText}
      </button>
      <button class="enquete-btn" id="feedback-no" aria-label={noText}>
        {noText}
      </button>
    </div>
  </div>
</aside>
<script src={`/javascripts/enquete.js?${buildnum}`}></script> 