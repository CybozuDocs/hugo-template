---
interface Props {
  regions?: string[];
  env: {
    targetRegion: string;
  };
}

const { regions, env } = Astro.props;

// regionsが未定義の場合は常に表示
// regionsが定義されている場合は、env.targetRegionが含まれるかチェック
const shouldDisplay = !regions || regions.includes(env.targetRegion);
---

{shouldDisplay && <slot />}
